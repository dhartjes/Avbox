@model Avbox.Models.AzureFileDownloadViewModel

@{
    ViewBag.Title = "Find a file";
}

<h2>View details for a file</h2>

@using (Html.BeginForm("Details", "Download"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>AzureFile</h4>
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.AzureId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AzureId)
                @Html.ValidationMessageFor(model => model.AzureId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Directory, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Directory)
                @Html.ValidationMessageFor(model => model.Directory)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Recipient, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Directory)
                @Html.ValidationMessageFor(model => model.Directory)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Details" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to home", "Index", "Home")
</div>
